# env

## macOS doesn't have a concept of XDG Base Directories, so we set the defaults here
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"

export ZSH_CACHE_DIR="$XDG_CACHE_HOME/zsh"
export ZCOMPDUMP_PATH="$ZSH_CACHE_DIR/zcompcache"

export CLICOLOR=1

##Â This is used for detecting if zinit is here and then cloning it.
export ZINIT_HOME="$XDG_DATA_HOME/zinit"

# Editors
export EDITOR='nvim'
export VISUAL='nvim'
